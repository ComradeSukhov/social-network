.tile.is-child.box
  %p.title.is-5= link_to post.author_name, user_url(post.author_id)
  %p.subtitle.is-6.grey= creation_time(post)

  %p.content= post.body

  %a.button{ href: post_path(post) }
    %span.icon.is-small
      %i.fa.fa-comment-o
    - if post.comments_quantity.positive?
      %span= pluralize(post.comments_quantity, 'comment')
