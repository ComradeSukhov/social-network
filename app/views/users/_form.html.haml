= form_with model: @user, url: signup_url, local: true do |f|
  %p.title Sign up

  - if alert
    %p.notification.is-danger= alert
    - first_name_danger = 'is-danger' unless @user.errors[:first_name].empty?
    - last_name_danger  = 'is-danger' unless @user.errors[:last_name] .empty?
    - email_danger      = 'is-danger' unless @user.errors[:email]     .empty?
    - password_danger   = 'is-danger' unless @user.errors[:password]  .empty?


  .field
    = f.label :first_name, class: :label
    .control
      = f.text_field :first_name, class:       "input #{ first_name_danger }", |
                                  placeholder: 'Anton',                        |
                                  autofocus:    true                           |
      - @user.errors.full_messages_for(:first_name).each do |msg|
        %p.help.is-danger= msg

  .field
    = f.label :last_name, class: :label
    .control
      = f.text_field :last_name, class:       "input #{ last_name_danger }", |
                                  placeholder: 'Cambridge'                   |
      - @user.errors.full_messages_for(:last_name).each do |msg|
        %p.help.is-danger= msg

  .field
    = f.label :email, class: :label
    .control
      = f.email_field :email, class:       "input #{ email_danger }", |
                              placeholder: 'cambridge@example.com'    |
      - @user.errors.full_messages_for(:email).each do |msg|
        %p.help.is-danger= msg

  .field
    = f.label :password, class: :label
    .control
      = f.password_field :password, class:       "input #{ password_danger }", |
                                    placeholder: "\u2022" * 6                  |
      - @user.errors.full_messages_for(:password).each do |msg|
        %p.help.is-danger= msg

  .field
    .contol
      = f.submit 'Sign up', class: 'button is-link'
