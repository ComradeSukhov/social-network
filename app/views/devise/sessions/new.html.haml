.columns.is-centered
  .column.is-3.box.limit-min-max
    %p.title Log in
    = form_for(resource, as: resource_name,                      |
                        url: session_path(resource_name)) do |f| |

      - if alert
        %p.notification.is-danger= alert
        - is_danger = 'is-danger'

      .field
        = f.label :email, class: :label
        .control
          = f.email_field :email, class:        "input #{ is_danger }", |
                                  placeholder:  'email@example.com',    |
                                  autocomplete: 'email',                |
                                  autofocus:     true                   |

      .field
        = f.label :password, class: :label
        .control
          = f.password_field :password, class:        "input #{ is_danger }", |
                                        placeholder:  "\u2022" * 6,           |
                                        autocomplete: 'current-password'      |

      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me, class: 'checkbox'
          = f.label :remember_me, class: 'checkbox'

      .field
        .contol.has-text-centered
          = f.submit 'Log in', class: 'button is-link is-rounded width-75'

    = render "devise/shared/links"
